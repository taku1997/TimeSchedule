extends layout


block content
    br
    div.jumbotron.m-sm-5
      h1.display-5.text-center Jack and Beans
      br
      h5.display-5.text-center #{message} 
      br
      form.text-centr(role='form', action="/login",method="post")
        .form-group.row
          h4.col-xl-3.col-form-label(for="staticEmail") ユーザネーム：
          div.col-xl-9
           input.form-control(type='text', name="username", placeholder='Username', required="required")
        .form-group.row
          h4.col-xl-3.col-form-label(for="staticEmail") パスワード：
          div.col-xl-9
            input.form-control(type='password', name="password", placeholder='Password', required="required")
        br
        div.text-center
          button.btn.btn-info.col-4(type='submit',id="login") ログイン
          a.col-4(href="/registar",id="login").btn.btn-info 新規登録
    
